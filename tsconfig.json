{
    "compilerOptions": {
        "allowJs": true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "build",
        "inlineSourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "strictNullChecks": false,
        "removeComments": true,
        "moduleResolution": "node"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "src/config-template.ts",
        "src/commands/template.ts"
    ]
}